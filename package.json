{
  "scripts": {
    "lint:all": "eslint exercises/*/exercise.js",
    "// everything below here is stuff that's only useful for me": "",
    "ci": "npm run lint:all && npm test",
    "slides": "slides/tools/build-template.sh slides/src < slides/index.template.md > slides/index.html",
    "test": "node exercises/.sys/run-all.js",
    "slides:dev": "nodemon --ext md,js,css --watch slides --exec 'npm run slides'"
  },
  "license": "Â©",
  "private": true,
  "engines": {
    "node": ">= 4.2.0"
  },
  "dependencies": {
    "babel-polyfill": "6.26.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-es2016": "6.24.1",
    "babel-preset-es2017": "6.24.1",
    "babel-register": "6.26.0",
    "chai": "^3.4.1",
    "chalk": "^1.1.3",
    "eslint": "4.19.0",
    "eslint-config-standard": "^6.2.0",
    "eslint-plugin-promise": "3.7.0",
    "eslint-plugin-standard": "3.0.1",
    "lodash": "^4.0.0",
    "mocha": "^2.4.5",
    "pprint": "0.0.1",
    "regenerator-runtime": "0.11.1",
    "sinon": "^1.17.2"
  },
  "devDependencies": {
    "hogan.js": "~3.0.2",
    "MD5": "^1.3.0",
    "easy-stdin": "^1.0.1",
    "marked": "^0.3.5",
    "node-uuid": "^1.4.7",
    "nodemon": "^1.9.1",
    "shelljs": "^0.3.0"
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "browser": true,
      "mocha": true,
      "es6": true,
      "node": true
    },
    "globals": {},
    "rules": {
      "padded-blocks": "off",
      "no-multiple-empty-lines": 0,
      "keyword-spacing": [
        0
      ],
      "spaced-comment": 0,
      "new-parens": 0,
      "no-underscore-dangle": "off",
      "strict": "off",
      "no-lone-blocks": "off",
      "space-before-function-paren": [
        0
      ],
      "no-trailing-spaces": 0,
      "eqeqeq": [
        "error",
        "allow-null"
      ],
      "comma-spacing": [
        0
      ],
      "quotes": [
        0
      ],
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "key-spacing": [
        2,
        {
          "beforeColon": false,
          "afterColon": true
        }
      ],
      "semi": [
        2,
        "always"
      ],
      "no-use-before-define": "off",
      "no-empty": [
        2,
        {
          "allowEmptyCatch": true
        }
      ],
      "no-spaced-func": 2,
      "quote-props": [
        2,
        "as-needed"
      ],
      "space-unary-ops": [
        2,
        {
          "words": false,
          "nonwords": false
        }
      ],
      "no-mixed-spaces-and-tabs": 2,
      "yoda": [
        2,
        "never"
      ],
      "no-with": 2,
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "no-multi-str": 2,
      "one-var": [
        2,
        "never"
      ],
      "semi-spacing": [
        2,
        {
          "before": false,
          "after": true
        }
      ],
      "space-before-blocks": [
        2,
        "always"
      ],
      "wrap-iife": 2,
      "comma-style": [
        2,
        "last"
      ],
      "space-infix-ops": 2,
      "camelcase": [
        2,
        {
          "properties": "always"
        }
      ],
      "eol-last": 2,
      "dot-notation": 2,
      "curly": [
        2,
        "all"
      ],
      "lines-around-comment": [
        0
      ],
      "consistent-this": [
        2,
        "_this"
      ],
      "linebreak-style": [
        2,
        "unix"
      ],
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "max-len": [
        2,
        100
      ],
      "requireShorthandArrowFunctions": 0,
      "disallowMultipleLineBreaks": 0
    }
  }
}
